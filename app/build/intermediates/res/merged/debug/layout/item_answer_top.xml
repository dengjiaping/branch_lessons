<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160px"
    >


    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginRight="20px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50px"
        android:padding="5px"
        android:src="@drawable/icon_avatar" />


    <TextView
        android:id="@+id/tv_datitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_avatar"
        android:layout_alignTop="@+id/img_avatar"
        android:ellipsize="end"
        android:maxEms="8"
        android:singleLine="true"
        android:text="潘建伟"
        android:textColor="@color/black_33"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/img_is_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_datitle"
        android:layout_marginLeft="10px"
        android:layout_marginTop="5px"
        android:layout_toRightOf="@+id/tv_datitle"
        android:src="@drawable/icon_v"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_dajob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/img_avatar"
        android:ellipsize="end"
        android:text="aaaa"
        android:paddingTop="2px"
        android:maxEms="14"
        android:singleLine="true"
        android:textColor="@color/menu"
        android:textSize="10sp" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_avatar"
        android:layout_toRightOf="@+id/img_avatar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_dawendaliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_dawenliang"
            android:textColor="@color/menu"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_dawenliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个回答"
            android:textColor="@color/menu"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/txt_daguanzhuliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/tv_dawenliang"
            android:textColor="@color/menu"
            android:text="关注"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/txt_datoutingliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/txt_daguanzhuliang"
            android:textColor="@color/menu"
            android:text="偷听"
            android:textSize="10sp" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>