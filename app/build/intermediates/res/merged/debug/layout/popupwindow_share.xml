<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:gravity="bottom"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="77px"
            android:layout_weight="1"
            android:background="#dedede"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32px"
            android:gravity="center_vertical"
            android:text="分享至"
            android:textColor="@color/black_33" />

        <View
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="77px"
            android:layout_weight="1"
            android:background="#dedede"></View>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_share_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_cancel"
        android:background="#F2F2F2"
        android:weightSum="2"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_share_wx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_share_wx"
                android:layout_width="68px"
                android:layout_height="68px"
                android:src="@drawable/img_weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="微信"
                android:textColor="@color/today_f6"
                android:textSize="10sp" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_friend_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_share_friend_circle"
                android:layout_width="68px"
                android:layout_height="68px"
                android:src="@drawable/img_weixin_circle" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="朋友圈"
                android:textColor="@color/today_f6"
                android:textSize="10sp" />
        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_share_qq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_share_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_qq" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="QQ好友"
                android:textColor="@color/today_f6"
                android:textSize="10sp" />
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/img_share_sina"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/img_xinlang"
            android:visibility="gone" />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="82px"
        android:background="#aba0a4"></View>

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:background="#F2F2F2"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/black_33"
        android:textSize="17sp" />
</com.zhy.autolayout.AutoLinearLayout>