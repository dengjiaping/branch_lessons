<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.yidiankeyan.science.view.rollviewpager.RollPagerView
        android:id="@+id/vp_banner"
        android:layout_width="match_parent"
        android:layout_height="320px"
        app:rollviewpager_play_delay="5000" />

    <TextView
        android:text="精选榜单"
        android:layout_marginLeft="24px"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:textSize="15sp"
        android:textColor="@color/black_33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24px"
        android:paddingRight="24px">

        <ImageView
            android:id="@+id/view_img_ranking"
            android:layout_width="210px"
            android:layout_height="210px"
            android:layout_marginRight="36px"
            android:layout_weight="1"
            android:src="@drawable/ranking_img" />

        <ImageView
            android:id="@+id/view_audio_ranking"
            android:layout_width="210px"
            android:layout_height="210px"
            android:layout_marginRight="36px"
            android:layout_weight="1"
            android:src="@drawable/ranking_audio" />

        <ImageView
            android:id="@+id/view_video_ranking"
            android:layout_width="210px"
            android:layout_height="210px"
            android:layout_weight="1"
            android:src="@drawable/ranking_video" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:paddingLeft="24px"
        android:paddingRight="24px">

        <ImageView
            android:id="@+id/view_subscribe_ranking"
            android:layout_width="210px"
            android:layout_height="210px"
            android:layout_marginRight="36px"
            android:layout_weight="1"
            android:src="@drawable/ranking_subscribe" />

        <ImageView
            android:id="@+id/view_editor_ranking"
            android:layout_width="210px"
            android:layout_height="210px"
            android:layout_marginRight="36px"
            android:layout_weight="1"
            android:src="@drawable/ranking_editor" />

        <ImageView
            android:id="@+id/view_buy_ranking"
            android:layout_width="210px"
            android:layout_height="210px"
            android:layout_weight="1"
            android:src="@drawable/ranking_buy" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
