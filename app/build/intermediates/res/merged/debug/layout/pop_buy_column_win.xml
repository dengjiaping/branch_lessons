<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1f1f1"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29px"
            android:text="购买确认"
            android:textColor="@color/black_33"
            android:textSize="17sp"
            android:textStyle="bold"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="93px"
            android:gravity="center"
            >


            <TextView
                android:id="@+id/tv_txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需要支付 ¥ "
                android:textColor="@color/black_33"
                android:textSize="15sp"
                />


            <TextView
                android:id="@+id/tv_shop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11.5"
                android:textColor="@color/defaultcolortwo"
                android:textSize="15sp"
                />

        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_moz_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="191px"
            android:orientation="horizontal"
            >


            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_wx_money"
                android:layout_width="0dp"
                android:layout_height="88px"
                android:layout_marginLeft="20px"
                android:layout_weight="1"
                android:background="@drawable/selector_column_textview"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="57px"
                    android:layout_height="57px"
                    android:src="@drawable/icon_account_balance_wx"
                    />

                <TextView
                    android:id="@+id/tv_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="21px"
                    android:gravity="center"
                    android:text="微信"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    />

            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_zf_money"
                android:layout_width="0dp"
                android:layout_height="88px"
                android:layout_marginLeft="14px"
                android:layout_marginRight="13px"
                android:layout_weight="1"
                android:background="@drawable/selector_column_textview"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="56px"
                    android:layout_height="56px"
                    android:src="@drawable/icon_account_balance_zfb"
                    />


                <TextView
                    android:id="@+id/tv_zf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21px"
                    android:text="支付宝"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    />
            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_balance"
                android:layout_width="0dp"
                android:layout_height="88px"
                android:layout_marginRight="20px"
                android:layout_weight="1"
                android:background="@drawable/selector_column_textview"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="57px"
                    android:layout_height="57px"
                    android:src="@drawable/icon_account_balance_ye"
                    />

                <TextView
                    android:id="@+id/tv_balance_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23px"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:id="@+id/tv_save_money"
            android:layout_width="match_parent"
            android:layout_height="72px"
            android:layout_below="@+id/ll_moz_moneys"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="13px"
            android:layout_marginLeft="75px"
            android:layout_marginRight="75px"
            android:layout_marginTop="368px"
            android:background="@drawable/shape_answer_focused"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="15sp"/>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>