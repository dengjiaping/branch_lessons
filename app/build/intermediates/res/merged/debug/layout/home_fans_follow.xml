<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30px"
        >

        <ImageView
            android:id="@+id/img_reward"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="24px"
            android:layout_marginTop="30px"
            android:scaleType="centerCrop"
            android:src="@drawable/img_jijila_fans"
            />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_reward"
            android:layout_alignTop="@+id/img_reward"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/img_reward"
            >

            <TextView
                android:id="@+id/txt_reward_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你的笑容胜过阳光"
                android:maxLength="16"
                android:layout_centerVertical="true"
                android:textColor="@color/huihei"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/txt_reward_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/txt_reward_name"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxEms="18"
                android:visibility="gone"
                android:singleLine="true"
                android:text="[一黑到底] 68秀恩爱的后果第三方的所发生的的所发生的"
                android:textSize="24px"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24px"
                android:src="@drawable/icon_more_fans"
                />
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>