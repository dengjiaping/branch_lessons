<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/content_view"
        android:layout_width="619px"
        android:layout_height="960px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="187px"
        android:background="@color/black"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29px"
            android:text="墨子快讯"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:id="@+id/line"
            android:layout_width="30px"
            android:layout_height="5px"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10px"
            android:background="#e54e4e"></View>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15px"
            android:text="2017-5-6"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="480px"
            android:layout_alignParentBottom="true"
            android:background="#f4f4f4"
            android:gravity="bottom"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70px"
                android:orientation="horizontal">

                <View
                    android:layout_width="220px"
                    android:layout_height="1px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8px"
                    android:background="#dedede"></View>

                <View
                    android:layout_width="220px"
                    android:layout_height="1px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8px"
                    android:background="#dedede"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="分享至"
                    android:textColor="@color/black_33"
                    android:textSize="14sp" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="130px"
                android:layout_marginBottom="72px"
                android:orientation="horizontal"
                android:weightSum="3">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_wx"
                        android:layout_width="68px"
                        android:layout_height="68px"
                        android:layout_weight="1"
                        android:src="@drawable/img_weixin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_wx_circle"
                        android:layout_width="68px"
                        android:layout_height="68px"
                        android:layout_weight="1"
                        android:src="@drawable/img_weixin_circle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="朋友圈" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_qq"
                        android:layout_width="68px"
                        android:layout_height="68px"
                        android:layout_weight="1"
                        android:src="@drawable/img_qq" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="朋友圈" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="555px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="164px"
            android:background="@drawable/shape_flash_card"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21px"
                android:layout_marginRight="21px"
                android:layout_marginTop="40px"
                android:ellipsize="end"
                android:lines="8"
                android:textColor="#111111" />

            <EditText
                android:id="@+id/et_comment"
                android:layout_width="500px"
                android:layout_height="88px"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40px"
                android:layout_marginTop="41px"
                android:background="#f7f7f7"
                android:hint="这事儿必须说两句~"
                android:paddingLeft="22px"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="14sp" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>