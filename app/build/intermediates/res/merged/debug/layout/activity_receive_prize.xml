<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_all"
    android:background="@drawable/receive_prize_bg"
    tools:context="com.yidiankeyan.science.information.acitivity.ReceivePrizeActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="70px">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="21px"
            android:paddingRight="21px">

            <ImageView
                android:id="@+id/title_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/receive_prize_return" />

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/maintitle_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="160px"
            android:layout_weight="5"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="领奖信息填写"
            android:textColor="#FDFCFC"
            android:textSize="18sp" />
        <ImageButton
            android:id="@+id/title_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="btnmainright"
            android:background="@null"
            android:paddingLeft="21px"
            android:paddingRight="21px"
            android:src="@drawable/icon_subsribe_more"
            android:visibility="visible" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/title"
        android:background="#FEFDFD"></View>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="104px"
        android:layout_marginRight="104px"
        android:layout_marginTop="362px"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/receive_prize_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="94px"
            android:text="领奖人姓名"
            android:textColor="#FFD486"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="540px"
            android:layout_height="55px"
            android:layout_marginTop="20px"
            android:background="@drawable/shape_lottery_prize_normal_bg"
            android:hint="请输入姓名"
            android:paddingLeft="20px"
            android:textColorHint="#B6B4B4"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="请仔细填写领奖人手机号，提交后无法修改"
            android:textColor="#FFD486"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="540px"
            android:layout_height="55px"
            android:layout_marginTop="20px"
            android:background="@drawable/shape_lottery_prize_normal_bg"
            android:hint="请输入手机号"
            android:paddingLeft="20px"
            android:textColorHint="#B6B4B4"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="领奖人详细地址"
            android:textColor="#FFD486"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="540px"
            android:layout_height="55px"
            android:layout_marginTop="20px"
            android:background="@drawable/shape_lottery_prize_normal_bg"
            android:hint="请输入地址"
            android:paddingLeft="20px"
            android:textColorHint="#B6B4B4"
            android:textSize="11sp" />
    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84px"
        android:background="@drawable/confirm_receive_bg"
        android:minHeight="0px"
        android:minWidth="0px"
        android:padding="0px"
        android:text="确定领奖"
        android:textColor="#FFEA97"
        android:textSize="14sp" />
</com.zhy.autolayout.AutoRelativeLayout>
