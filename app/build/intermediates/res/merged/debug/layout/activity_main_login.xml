<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.yidiankeyan.science.app.activity.MainLoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="40px"
                android:paddingLeft="29px"
                android:paddingRight="30px"
                android:paddingTop="56px">

                <ImageView
                    android:id="@+id/img_tourist_login"
                    android:layout_width="42px"
                    android:layout_height="42px"
                    android:src="@drawable/icon_cancel" />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24px"
                android:layout_marginTop="64px"
                android:text="极速注册"
                android:textColor="#ff5252" />

            <ImageView
                android:id="@+id/img_moz_picture"
                android:layout_width="186px"
                android:layout_height="186px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="152px"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_account_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_moz_picture"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18px"
                android:text="账号登录"
                android:textColor="@color/black_33"
                android:textSize="18sp" />

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/al_phone_edit"
                android:layout_width="match_parent"
                android:layout_height="72px"
                android:layout_below="@+id/tv_account_number"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="104px"
                android:layout_marginRight="103px"
                android:layout_marginTop="83px"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:imeActionId="@+id/login"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1"
                    android:numeric="integer"
                    android:singleLine="true"
                    android:textColor="@color/black_33"
                    android:textColorHint="#c7c7c9"
                    android:textSize="32px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/al_phone_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="104px"
                android:layout_marginRight="103px"
                android:background="#AAAAAA"></View>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/al_password"
                android:layout_width="match_parent"
                android:layout_height="72px"
                android:layout_below="@+id/al_phone_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="104px"
                android:layout_marginRight="103px"
                android:layout_marginTop="60px"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/user_password"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black_33"
                    android:textColorHint="#c7c7c9"
                    android:textSize="32px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/al_password"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="104px"
                android:layout_marginRight="103px"
                android:background="#AAAAAA"></View>

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="72px"
                android:layout_below="@+id/al_password"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="104px"
                android:layout_marginRight="103px"
                android:layout_marginTop="84px"
                android:background="@drawable/shape_login_state"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_reset_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/tv_login"
                android:layout_below="@+id/tv_login"
                android:layout_marginTop="30px"
                android:text="重置密码"
                android:textColor="@color/black_33" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_login"
                android:layout_marginTop="100px"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60px"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="165px"
                        android:layout_height="1px"
                        android:layout_marginRight="40px"
                        android:background="#d0cfcf"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="其他登录方式"
                        android:textColor="#AAAAAA"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="165px"
                        android:layout_height="1px"
                        android:layout_marginLeft="40px"
                        android:background="#d0cfcf"></View>

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40px"
                    android:layout_marginBottom="18px"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_message_picture"
                        android:layout_width="82px"
                        android:layout_height="82px"
                        android:layout_marginRight="130px"
                        android:src="@drawable/icon_main_login_message_picture" />

                    <ImageView
                        android:id="@+id/img_wx_picture"
                        android:layout_width="82px"
                        android:layout_height="82px"
                        android:src="@drawable/icon_main_login_wx_picture" />

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/al_register_agreement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:gravity="center|bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录即表示同意墨子学堂"
                        android:textColor="#b9b9b9"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_register_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《用户使用协议》"
                        android:textColor="@color/defaultcolor"
                        android:textSize="13sp" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </ScrollView>
</com.zhy.autolayout.AutoRelativeLayout>
