<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:id="@+id/ll_personal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".my.activity.PersonalDataActivity">


    <ScrollView
        android:id="@+id/sv_personal_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        >

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_head_portrait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/iv_bg_zoom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_navy"/>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rl_personal_return"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="21px"
                    android:layout_marginTop="21px"
                    >

                    <ImageView
                        android:id="@+id/personal_return"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_audio_return"/>

                </com.zhy.autolayout.AutoRelativeLayout>

                <TextView
                    android:id="@+id/tv_edit_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="21px"
                    android:text="编辑资料"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    />


                <ImageView
                    android:id="@+id/iv_head_portrait"
                    android:layout_width="175px"
                    android:layout_height="174px"
                    android:layout_below="@+id/tv_edit_data"
                    android:layout_marginTop="62px"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_default_avatar"/>

                <ImageView
                    android:id="@+id/icn_amera"
                    android:layout_width="74px"
                    android:layout_height="74px"
                    android:layout_alignBottom="@+id/iv_head_portrait"
                    android:layout_marginLeft="-65px"
                    android:layout_toRightOf="@+id/iv_head_portrait"
                    android:src="@drawable/icn_amera"/>

            </com.zhy.autolayout.AutoRelativeLayout>


            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/ll_modify_name"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/tv_test1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24px"
                    android:text="昵称 "
                    android:textColor="@color/huihei"
                    android:textSize="32px"
                    />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_my_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40px"
                        android:maxLength="10"
                        android:text="昵称"
                        android:textColor="@color/personal"
                        android:textSize="32px"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more"
                        />

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f2f2f1"
                />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/ll_sex"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24px"
                    android:text="性别 "
                    android:textColor="@color/huihei"
                    android:textSize="32px"
                    />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_sex_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40px"
                        android:text="保密"
                        android:textColor="@color/personal"
                        android:textSize="32px"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f2f2f1"
                />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/ll_birth_data"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/tv_birth_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24px"
                    android:text="生日 "
                    android:textColor="@color/huihei"
                    android:textSize="32px"
                    />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40px"
                        android:text="1990"
                        android:textColor="@color/personal"
                        android:textSize="30px"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f2f2f1"
                />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_personality_autograph"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/tv_personality_autograph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24px"
                    android:focusableInTouchMode="true"
                    android:text="个人简介："
                    android:textColor="@color/huihei"
                    android:textSize="32px"
                    />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_introduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:ellipsize="end"
                        android:maxLength="13"
                        android:singleLine="true"
                        android:text="让更多的人来认识你吧"
                        android:textColor="@color/personal"
                        android:textSize="32px"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more"
                        />

                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:layout_below="@+id/iv_user_head"
                android:background="#f1f1f1"
                />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/ll_education"
                android:layout_width="match_parent"
                android:layout_height="88px"
                >

                <TextView
                    android:id="@+id/tv_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24px"
                    android:text="学历 "
                    android:textColor="@color/huihei"
                    android:textSize="32px"
                    />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_item_education"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40px"
                        android:text="未设置"
                        android:textColor="@color/personal"
                        android:textSize="32px"
                        />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more"
                        />

                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f2f2f1"
                />


            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/ll_industry"
                android:layout_width="match_parent"
                android:layout_height="88px"
                >

                <TextView
                    android:id="@+id/tv_industry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24px"
                    android:text="行业 "
                    android:textColor="@color/huihei"
                    android:textSize="32px"
                    />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_item_industry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:text="未设置"
                        android:textColor="@color/personal"
                        android:textSize="32px"
                        />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f2f2f1"
                />


            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/ll_occupation"
                android:layout_width="match_parent"
                android:layout_height="88px"
                >

                <TextView
                    android:id="@+id/tv_occupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24px"
                    android:text="职业 "
                    android:textColor="@color/huihei"
                    android:textSize="32px"
                    />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_item_occupation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40px"
                        android:text="未设置"
                        android:textColor="@color/personal"
                        android:textSize="32px"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f2f2f1"
                />

        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
