<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="bottom"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="77px"
            android:layout_weight="1"
            android:background="#dedede"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32px"
            android:gravity="center_vertical"
            android:text="分享至"
            android:textColor="@color/black_33" />

        <View
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="77px"
            android:layout_weight="1"
            android:background="#dedede"></View>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_cancel"
        android:background="@color/white"
        android:paddingBottom="20px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/ll_share_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_share_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="129px"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_share_wx"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:src="@drawable/icon_account_balance_wx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="微信"
                    android:textColor="#353535"
                    android:textSize="12sp" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_friend_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_share_friend_circle"
                    android:layout_width="68px"
                    android:layout_height="68px"
                    android:src="@drawable/icon_information_wxcircle" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="朋友圈"
                    android:textColor="#353535"
                    android:textSize="12sp" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_share_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="129px"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_share_qq"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:src="@drawable/icon_information_qq" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="QQ"
                    android:textColor="#353535"
                    android:textSize="12sp" />
            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_share_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_share_wx"
                android:layout_marginLeft="129px"
                android:layout_marginTop="22px"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_share_link_url"
                    android:layout_width="68px"
                    android:layout_height="68px"
                    android:src="@drawable/icon_information_link_url" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="链接"
                    android:textColor="#353535"
                    android:textSize="12sp" />
            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/img_share_sina"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/img_xinlang"
                android:visibility="gone" />
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="34px"
        android:background="#F2F2F1"></View>

    <TextView
        android:id="@+id/txt_close_share"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_alignParentBottom="true"
        android:background="#F2F2F1"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/black_33"
        android:textSize="17sp" />

</com.zhy.autolayout.AutoLinearLayout>