<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        card_view:cardCornerRadius="5dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txt_newstitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21px"
                android:text="量子通信全靠他一人"
                />

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/al_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21px"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10px"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图文专辑"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/onreads"
                    android:layout_marginLeft="20px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="567"
                    android:layout_marginLeft="5px"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/weidian"
                    android:layout_marginLeft="20px"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="45"
                    android:layout_marginLeft="5px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="34分钟前"
                    android:layout_marginRight="21px"
                    />

            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/img_pic"
                android:layout_width="wrap_content"
                android:layout_height="375px"
                android:layout_marginLeft="21px"
                android:layout_marginRight="21px"
                android:layout_marginTop="10px"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21px"
                android:layout_marginTop="10px"
                android:clickable="true"
                android:text="发现人类软骨中的胶原基质是永久性的，就算患上骨关节炎也机体自身也不会产生替换的胶原基质。"
                />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    >

                </View>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="21px"
                    android:background="@drawable/icon_today_share_normal"
                    />

            </com.zhy.autolayout.AutoLinearLayout>


        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>