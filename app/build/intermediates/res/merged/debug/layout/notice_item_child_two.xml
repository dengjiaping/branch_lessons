<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20px">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_container"
        cardBackgroundColor="#ffffff"
        cardPreventCornerOverlap="true"
        cardUseCompatPadding="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_marginTop="5dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="3dp"
        app:contentPadding="2dp">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_avatar" />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cv_container"
        android:layout_marginLeft="20px"
        android:singleLine="true"
        android:layout_toRightOf="@+id/cv_container"
        android:text="潘建伟"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_date"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cv_container"
        android:ellipsize="end"
        android:maxEms="14"
        android:singleLine="true"
        android:text="院士/中国科技大学教授"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cv_container"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/cv_container"
        android:gravity="center_vertical"
        android:text="sdcsdcsdc"
        android:textSize="11sp">

    </TextView>

</com.zhy.autolayout.AutoRelativeLayout>