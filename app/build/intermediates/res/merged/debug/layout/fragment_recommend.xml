<com.zhy.autolayout.AutoLinearLayout
    android:id="@+id/ll_recommend"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:id="@+id/maintitle_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="160px"
            android:layout_weight="5"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/black_33"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/title_btn"
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@drawable/icon_information_search"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/ll_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="30px">

            <ImageView
                android:id="@+id/img_static_play"
                android:layout_width="36px"
                android:layout_height="38px"
                android:layout_centerVertical="true"
                android:src="@drawable/animations_column_one"/>

            <ImageView
                android:id="@+id/img_play"
                android:layout_width="36px"
                android:layout_height="38px"
                android:layout_centerVertical="true"
                android:src="@drawable/animation_recommend_select"
                android:visibility="gone"/>
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

    <cn.finalteam.loadingviewfinal.PtrClassicFrameLayout
        android:id="@+id/ptr_recommend_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.yidiankeyan.science.view.ObservableScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <com.yidiankeyan.science.view.rollviewpager.RollPagerView
                    android:id="@+id/vp_school_course"
                    android:layout_width="match_parent"
                    android:layout_height="422px"
                    android:background="@drawable/icon_banner_load"
                    app:rollviewpager_play_delay="5000"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="16px"
                    android:background="#f1f1f1"
                    android:visibility="gone"></View>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35px"
                    android:layout_marginTop="32px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_today_achievement"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="62px"
                            android:layout_height="62px"
                            android:src="@drawable/icon_recomm_column"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8px"
                            android:text="专栏"
                            android:textColor="@color/black_33"
                            android:textSize="12sp"/>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_read_book"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="62px"
                            android:layout_height="62px"
                            android:src="@drawable/icon_recomm_reads"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8px"
                            android:text="读书"
                            android:textColor="@color/black_33"
                            android:textSize="12sp"/>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_science_help"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="62px"
                            android:layout_height="62px"
                            android:src="@drawable/icon_keda"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8px"
                            android:text="科答"
                            android:textColor="@color/black_33"
                            android:textSize="12sp"/>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_audio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="62px"
                            android:layout_height="62px"
                            android:src="@drawable/icon_recomm_news"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8px"
                            android:text="快讯"
                            android:textColor="@color/black_33"
                            android:textSize="12sp"/>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_video"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="62px"
                            android:layout_height="62px"
                            android:src="@drawable/icon_information_txt"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8px"
                            android:text="资讯"
                            android:textColor="@color/black_33"
                            android:textSize="12sp"/>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_repair"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/brainrepair"/>
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="16px"
                    android:background="#f1f1f1"></View>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_today_business"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/enterprise"/>
                    </com.zhy.autolayout.AutoLinearLayout>


                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_today_xiaoshuo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sciencenovel"/>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_today_qimeng"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/scienceinitiation"/>
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:id="@+id/activity_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e8e8e8"></View>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rl_news_title"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:layout_marginLeft="23px"
                    android:layout_marginRight="4px"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="快讯"
                        android:textColor="@color/black_33"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/rl_news_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10px"
                        android:padding="15px">

                        <TextView
                            android:id="@+id/tv_news_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="更多"
                            android:textColor="@color/menu"
                            android:textSize="13sp"/>


                    </com.zhy.autolayout.AutoRelativeLayout>
                </com.zhy.autolayout.AutoRelativeLayout>

                <View
                    android:id="@+id/v_news"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#f1f1f1"></View>

                <com.yidiankeyan.science.view.MarqueeView
                    android:id="@+id/marquee_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="29px"
                    android:layout_marginLeft="23px"
                    android:layout_marginRight="18px"
                    android:layout_marginTop="31px"
                    app:mvInterval="5000"
                    app:mvLineSpacingExtra="10px"
                    app:mvLines="3"
                    app:mvTextColor="@color/black_33"
                    app:mvTextSize="14sp">

                </com.yidiankeyan.science.view.MarqueeView>

                <View
                    android:id="@+id/v_news_line"
                    android:layout_width="match_parent"
                    android:layout_height="16px"
                    android:background="#f1f1f1"></View>


                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rl_today"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:layout_marginLeft="23px"
                    android:layout_marginRight="4px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="日课"
                        android:textColor="@color/black_33"
                        android:textSize="15sp"
                        android:textStyle="bold"/>


                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/rl_today_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10px"
                        android:padding="15px">

                        <TextView
                            android:id="@+id/tv_today_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="更多"
                            android:textColor="@color/menu"
                            android:textSize="13sp"/>


                    </com.zhy.autolayout.AutoRelativeLayout>

                </com.zhy.autolayout.AutoRelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e8e8e8"></View>


                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_data_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="暂无数据"
                            android:visibility="gone"/>

                        <com.yidiankeyan.science.view.ShowAllListView
                            android:id="@+id/lv_history"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@null"
                            android:scrollbars="none"></com.yidiankeyan.science.view.ShowAllListView>
                    </com.zhy.autolayout.AutoRelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#e8e8e8"></View>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20px"
                        >

                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/ll_rec_play_audio"
                            android:layout_width="200px"
                            android:layout_height="60px"
                            android:layout_marginLeft="105px"
                            android:background="@drawable/shape_recoomend_audio"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img_today_play"
                                android:layout_width="28px"
                                android:layout_height="28px"
                                android:src="@drawable/icon_rec_recomm_plays"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7px"
                                android:text="全部播放"
                                android:textColor="@color/black_33"
                                android:textSize="14sp"/>

                        </com.zhy.autolayout.AutoLinearLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/ll_see_sign"
                            android:layout_width="200px"
                            android:layout_height="60px"
                            android:layout_marginLeft="105px"
                            android:background="@drawable/shape_recoomend_audio"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="28px"
                                android:layout_height="28px"
                                android:src="@drawable/icon_rec_comm_todays"/>

                            <TextView
                                android:id="@id/tv_sign"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7px"
                                android:text="查看签到"
                                android:textColor="@color/black_33"
                                android:textSize="14sp"/>

                        </com.zhy.autolayout.AutoLinearLayout>


                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>


                <View
                    android:id="@+id/today_line"
                    android:layout_width="match_parent"
                    android:layout_height="16px"
                    android:layout_marginTop="30px"
                    android:background="#f1f1f1"
                    android:visibility="visible"/>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rl_column"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:layout_marginLeft="24px"
                    android:layout_marginRight="4px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/txt_love"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="精选专栏"
                        android:textColor="@color/black_33"
                        android:textSize="15sp"
                        android:textStyle="bold"/>


                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/rl_column_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10px"
                        android:padding="15px"
                        >

                        <TextView
                            android:id="@+id/tv_column_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="更多"
                            android:textColor="@color/menu"
                            android:textSize="12sp"
                            />
                    </com.zhy.autolayout.AutoRelativeLayout>
                </com.zhy.autolayout.AutoRelativeLayout>


                <View
                    android:id="@+id/v_columns"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#f2f2f1"></View>

                <com.yidiankeyan.science.view.ShowAllListView
                    android:id="@+id/lv_listview_column"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="#eeeeee"
                    android:dividerHeight="1px">

                </com.yidiankeyan.science.view.ShowAllListView>

                <View
                    android:id="@+id/v_column_list"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e8e8e8"></View>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rl_column_random"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:gravity="center">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="28px"
                            android:layout_height="26px"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_rec_comm_batch"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15px"
                            android:text="换一批"
                            android:textColor="@color/black_33"
                            android:textSize="14sp"/>

                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoRelativeLayout>


                <View
                    android:id="@+id/v_column"
                    android:layout_width="match_parent"
                    android:layout_height="16px"
                    android:background="#f1f1f1"
                    android:visibility="visible"/>


                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rl_magazine"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:layout_marginLeft="24px"
                    android:layout_marginRight="4px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_magazine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="精品杂志"
                        android:textColor="@color/black_33"
                        android:textSize="15sp"
                        android:textStyle="bold"/>


                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/rl_magazine_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="20px"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_magazine_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10px"
                            android:text="查看更多"
                            android:textColor="@color/menu"
                            android:textSize="12sp"/>

                        <ImageButton
                            android:id="@+id/txt_magazine_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_magazine_more"
                            android:background="@null"
                            android:scaleType="fitEnd"
                            android:src="@drawable/more"/>


                    </com.zhy.autolayout.AutoRelativeLayout>

                </com.zhy.autolayout.AutoRelativeLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/horizontal_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:scrollbars="none"/>

                <View
                    android:id="@+id/v_magazine"
                    android:layout_width="match_parent"
                    android:layout_height="16px"
                    android:layout_marginTop="30px"
                    android:background="#f2f2f1"
                    android:visibility="visible"/>


                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rl_interview"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:layout_marginLeft="24px"
                    android:layout_marginRight="4px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_interview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="墨子专访"
                        android:textColor="@color/black_33"
                        android:textSize="16sp"
                        android:textStyle="bold"/>


                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/rl_interview_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10px"
                        android:padding="15px">

                        <TextView
                            android:id="@+id/tv_interview_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="更多"
                            android:textColor="@color/menu"
                            android:textSize="12sp"/>


                    </com.zhy.autolayout.AutoRelativeLayout>

                </com.zhy.autolayout.AutoRelativeLayout>


                <ImageView
                    android:id="@+id/img_interview_bg"
                    android:layout_width="match_parent"
                    android:layout_height="428px"
                    android:background="@drawable/icon_banner_load"
                    android:scaleType="centerCrop"
                    />

                <View
                    android:id="@+id/v_interview_line"
                    android:layout_width="match_parent"
                    android:layout_height="16px"
                    android:background="#f2f2f1"
                    android:visibility="visible"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e8e8e8"></View>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rl_read_random"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:visibility="gone"
                    android:gravity="center">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="28px"
                            android:layout_height="26px"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_rec_comm_batch"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15px"
                            android:text="换一批"
