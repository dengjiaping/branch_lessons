<?xml version="1.0" encoding="utf-8"?><!-- 科技杂志item -->
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginTop="20px"
        android:orientation="horizontal"
        >


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21px"
            android:descendantFocusability="blocksDescendants">

            <ImageView
                android:id="@+id/img_magazine_avatar"
                android:layout_width="120px"
                android:layout_height="160px"
                android:layout_marginBottom="4px"
                android:background="@drawable/rec_frame"
                android:clickable="true"
                android:padding="6px"
                android:scaleType="centerCrop"/>

        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20px"
            android:paddingRight="21px">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_magazine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tuwenbiao"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="杂志名称"
                    android:textColor="@color/huihei"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:text="2016年10月刊目录"
                    android:textSize="12sp"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_container1"
                android:layout_below="@+id/ll_container"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="本期内容简介本期内容简介本期内容简介本期内容简介本期内容简介本期内容简介本期内容简介本期内容简介本期内容简介本期内容简介本期内容简介"
                android:textSize="12sp"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_container1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_icmessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10px"
                    android:src="@drawable/onreads"/>

                <TextView
                    android:id="@+id/txt_message_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阅读量"
                    android:textColor="@color/qianhui"
                    android:textSize="10sp"/>
            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoRelativeLayout>


    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>