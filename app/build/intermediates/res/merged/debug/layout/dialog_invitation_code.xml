<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="65px"
    android:layout_marginRight="65px"
    android:background="@drawable/select_register_logins"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="42px"
        android:layout_height="42px"
        android:layout_gravity="right"
        android:layout_marginRight="24px"
        android:layout_marginTop="23px"
        android:src="@drawable/icon_cancel"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5px"
        android:gravity="center"
        android:text="@string/invitation_code"
        android:textColor="@color/black_33"
        android:textSize="40px"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="23px"
        android:layout_marginTop="37px"
        android:gravity="center|left"
        android:paddingLeft="30px"
        android:text="@string/message"
        android:textColor="@color/black_33"
        android:textSize="34px"/>

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:visibility="gone"
        android:text=""
        android:textColor="@color/red"
        android:textSize="24px"/>

    <EditText
        android:id="@+id/et_invitation_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27px"
        android:layout_marginRight="24px"
        android:layout_marginTop="93px"
        android:background="@null"
        android:hint="@string/input_code"
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:numeric="integer"
        android:singleLine="true"
        android:textSize="30px"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="27px"
        android:layout_marginRight="24px"
        android:layout_marginTop="10px"
        android:background="#AAAAAA"></View>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="72px"
        android:layout_gravity="center"
        android:layout_marginBottom="38px"
        android:layout_marginLeft="110px"
        android:layout_marginRight="110px"
        android:layout_marginTop="38px"
        android:background="@drawable/select_authentication_bg"
        android:text="@string/commit"
        android:textColor="@color/white"
        android:textSize="30px"/>

</com.zhy.autolayout.AutoLinearLayout>