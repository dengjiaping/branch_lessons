<com.zhy.autolayout.AutoLinearLayout
    android:id="@+id/ll_home_page"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yidiankeyan.science.my.fragment.HomePageFragment">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="128px"
            android:orientation="horizontal"
            >


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_text_image_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black_33"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tv_text_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="图文"
                    android:textColor="@color/menu"
                    android:textSize="14sp"
                    />


            </com.zhy.autolayout.AutoLinearLayout>


            <View
                android:layout_width="1px"
                android:layout_height="68px"
                android:layout_gravity="center_vertical"
                android:background="#999999"
                ></View>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_audio_frequency_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black_33"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tv_audio_frequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="音频"
                    android:textColor="@color/menu"
                    android:textSize="14sp"
                    />


            </com.zhy.autolayout.AutoLinearLayout>


            <View
                android:layout_width="1px"
                android:layout_height="68px"
                android:layout_gravity="center_vertical"
                android:background="#999999"
                ></View>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_video_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black_33"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tv_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="视频"
                    android:textColor="@color/menu"
                    android:textSize="14sp"
                    />


            </com.zhy.autolayout.AutoLinearLayout>


            <View
                android:layout_width="1px"
                android:layout_height="68px"
                android:layout_gravity="center_vertical"
                android:background="#999999"
                ></View>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_album_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black_33"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tv_album"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="专辑"
                    android:textColor="@color/menu"
                    android:textSize="14sp"
                    />


            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="#f1f1f1"
            ></View>

        <TextView
            android:id="@+id/tv_home_introduction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:layout_marginTop="30px"
            android:lineSpacingMultiplier="1.2"
            android:text=""
            android:textColor="@color/heione"
            android:textSize="14sp"
            />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_operation"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_weight="1"
            android:background="@color/defaultcolor"
            android:gravity="center"
            android:text="加好友"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_conversation"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="@color/defaultcolor"
            android:gravity="center"
            android:text="临时会话"
            android:textColor="@color/white"/>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
