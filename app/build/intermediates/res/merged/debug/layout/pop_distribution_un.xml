<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:id="@+id/pop_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="30px"
            android:text="分享领奖学金"
            android:textColor="@color/black_33"
            android:textSize="15sp"
            android:textStyle="bold"
            />


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="11px"
            android:padding="20px"
            >

            <ImageView
                android:id="@+id/tv_cancel"
                android:layout_width="26px"
                android:layout_height="26px"
                android:src="@drawable/icon_cancel"
                />


        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="88px"
            android:text="您需要先购买本商品，才可以使用分享领奖学金功能"
            />

        <TextView
            android:id="@+id/tv_load_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="140px"
            android:text="分享领奖学金说明："
            android:textColor="@color/black_33"
            android:textStyle="bold"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_load_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_load_msg"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_content_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#999999"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/tv_content_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14px"
                android:text=""
                android:textColor="#999999"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/tv_content_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14px"
                android:text=""
                android:textColor="#999999"
                android:textSize="12sp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_content_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14px"
                android:text=""
                android:textColor="#999999"
                android:textSize="12sp"
                />

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_below="@+id/ll_load_msg"
            android:layout_marginTop="30px"
            ></View>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>