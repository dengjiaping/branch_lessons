<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    android:id="@+id/rl_album_charge"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.yidiankeyan.science.subscribe.activity.AlbumChargeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="448px"
                >

                <ImageView
                    android:id="@+id/img_album_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_navy"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    />

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="70px">


                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_return"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:paddingLeft="21px"
                        android:paddingRight="21px">

                        <ImageView
                            android:id="@+id/img_return"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_audio_return"/>

                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_share"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:paddingLeft="21px"
                        android:paddingRight="24px">

                        <ImageView
                            android:id="@+id/img_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_white_more"/>
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoRelativeLayout>

                <TextView
                    android:id="@+id/tv_album_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40px"
                    android:layout_marginLeft="24px"
                    android:text="WEaresuper R"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20px"
                    android:layout_marginRight="24px"
                    android:text="预计跟新6期"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    />

            </com.zhy.autolayout.AutoRelativeLayout>

            <WebView
                android:id="@+id/web_describes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

            </WebView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="30px"
                android:background="#eeeeee"
                />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                >

                <TextView
                    android:id="@+id/tv_look_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="试看列表"
                    android:textColor="@color/kedaalbum"
                    android:textSize="17sp"
                    />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_look_list"
                    >

                </ListView>

            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="30px"
                android:background="#eeeeee"
                />

            <WebView
                android:id="@+id/web_guidelines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:background="@color/white"
                >


            </WebView>
        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_bottom_column"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_alignParentBottom="true"
        android:background="@color/qianhui"
        >

        <TextView
            android:id="@+id/tv_album_content_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gainsboros"
            android:gravity="center"
            android:text="试看"
            android:textColor="@color/kedaalbum"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_orange"
            android:gravity="center"
            android:text="购买：¥ 999"
            android:textColor="@color/white"
            android:textSize="15sp"/>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>
