<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_request"
        cardBackgroundColor="#ffffff"
        cardPreventCornerOverlap="true"
        cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:contentPaddingBottom="2dp"
        app:contentPaddingLeft="2dp"
        app:contentPaddingRight="2dp"
        app:contentPaddingTop="2dp">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="23px">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="大声霍金又来警告人类了"
                    android:textColor="@color/black_33"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/shape_preview_column_content"
                    android:paddingBottom="5px"
                    android:paddingLeft="15px"
                    android:paddingRight="15px"
                    android:paddingTop="5px"
                    android:text="试看"
                    android:textColor="@color/defaultcolor"
                    android:textSize="12sp" />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="content"
                android:textColor="#868686"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:scaleType="centerCrop" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/ll_for_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23px">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxEms="7"
                    android:singleLine="true"
                    android:text="15分钟前"
                    android:textColor="#999999"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/tv_read_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="15分钟前"
                    android:textColor="#999999"
                    android:textSize="10sp" />

            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </android.support.v7.widget.CardView>
</com.zhy.autolayout.AutoLinearLayout>