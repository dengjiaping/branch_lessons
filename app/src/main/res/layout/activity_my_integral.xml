<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.yidiankeyan.science.my.activity.MyIntegralActivity">

    <include layout="@layout/inc_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="480px"
                android:background="#ffffff"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27px"
                    android:layout_marginTop="21px"
                    android:text="我的积分："
                    android:textColor="#8b8b8b"
                    android:textSize="30px"
                    />

                <TextView
                    android:id="@+id/tv_integral_number"
                    android:layout_width="222px"
                    android:layout_height="85px"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/select_login_bg"
                    android:gravity="center"
                    android:text="1896"
                    android:textColor="#fefefe"
                    android:textSize="66px"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tv_integral_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="23px"
                    android:layout_marginTop="21px"
                    android:text="使用规则"
                    android:textColor="#8b8b8b"
                    android:textSize="30px"
                    />

                <TextView
                    android:id="@+id/tv_my_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_integral_number"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40px"
                    android:text="当前积分：1896分"
                    android:textColor="#4c4c4c"
                    android:textSize="36px"
                    />

                <TextView
                    android:id="@+id/tv_sizi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_my_integral"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10px"
                    android:text="累计积分，精彩不断"
                    android:textColor="#bdbdbd"
                    android:textSize="31px"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/ll_Ten_element"
                android:layout_marginTop="20px"
                android:background="#f5f5f5"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25px"
                android:background="#eeeeee"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_Ten_element"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_below="@+id/tv_science_money"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="35px"
                    android:text="登录送积分"
                    android:textColor="#424242"
                    android:textSize="36px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="（每日登录就可轻松赚积分）"
                    android:textColor="#b4b4b4"
                    android:textSize="26px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20px"
                    android:text="10分"
                    android:textColor="@color/main_orange"
                    android:textSize="25px"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:id="@+id/v_Ten_element"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5"
                />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_below="@+id/tv_science_money"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="35px"
                    android:text="偷听拿积分"
                    android:textColor="#424242"
                    android:textSize="36px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="（嫌积分攒的慢，还不快找大师学习？）"
                    android:textColor="#b4b4b4"
                    android:textSize="26px"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20px"
                    android:text="10分"
                    android:textColor="@color/main_orange"
                    android:textSize="25px"
                    />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:id="@+id/v_Fifty_element"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hengxiantwo"

                />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_below="@+id/tv_science_money"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="35px"
                    android:text="打赏得积分"
                    android:textColor="#424242"
                    android:textSize="36px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="（喜欢主编内容，那就打赏Ta）"
                    android:textColor="#b4b4b4"
                    android:textSize="26px"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20px"
                    android:text="10分"
                    android:textColor="@color/main_orange"
                    android:textSize="25px"
                    />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:id="@+id/v_One_hundred_element"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hengxiantwo"
                />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_below="@+id/tv_science_money"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="35px"
                    android:text="学习赢积分"
                    android:textColor="#424242"
                    android:textSize="36px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="（每日浏览十分钟以上就可获得积分）"
                    android:textColor="#b4b4b4"
                    android:textSize="26px"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20px"
                    android:text="10分"
                    android:textColor="@color/main_orange"
                    android:textSize="25px"
                    />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hengxiantwo"
                />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_below="@+id/tv_science_money"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="35px"
                    android:text="找他赚积分"
                    android:textColor="#424242"
                    android:textSize="36px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="（邀请好友加入墨子学堂一起赚积分吧）"
                    android:textColor="#b4b4b4"
                    android:textSize="26px"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20px"
                    android:text="30分"
                    android:textColor="@color/main_orange"
                    android:textSize="25px"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hengxiantwo"
                />


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_below="@+id/tv_science_money"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="35px"
                    android:text="提问得积分"
                    android:textColor="#424242"
                    android:textSize="36px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="（提问解惑，也能拿积分）"
                    android:textColor="#b4b4b4"
                    android:textSize="26px"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20px"
                    android:text="30分"
                    android:textColor="@color/main_orange"
                    android:textSize="25px"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hengxiantwo"
                />


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_below="@+id/tv_science_money"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="35px"
                    android:text="回答得积分"
                    android:textColor="#424242"
                    android:textSize="36px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="（学识渊博，积分任你拿）"
                    android:textColor="#b4b4b4"
                    android:textSize="26px"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20px"
                    android:text="50分"
                    android:textColor="@color/main_orange"
                    android:textSize="25px"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
