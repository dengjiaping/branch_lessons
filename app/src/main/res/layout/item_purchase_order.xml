<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_conversation_more_bg"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/ll_lately_book"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_lately_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="最近阅读"
            android:textColor="@color/black_33"
            android:textSize="14sp"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ececec"></View>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/ll_lately_shopping"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="最近购买"
            android:textColor="@color/black_33"
            android:textSize="14sp"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ececec"></View>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/ll_lately_update"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="最近更新"
            android:textColor="@color/black_33"
            android:textSize="14sp"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ececec"></View>
</com.zhy.autolayout.AutoLinearLayout>