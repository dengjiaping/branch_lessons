<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="21px">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_container"
        cardBackgroundColor="#ffffff"
        cardPreventCornerOverlap="true"
        cardUseCompatPadding="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_marginTop="5dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="3dp"
        app:contentPadding="2dp">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cv_container"
        android:layout_marginLeft="21px"
        android:ellipsize="end"
        android:maxLength="11"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_toRightOf="@+id/cv_container"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_centerVertical="true"
        android:layout_marginLeft="21px"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@+id/cv_container"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="14"
            android:singleLine="true"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/img_isfocus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:src="@drawable/icon_v"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            />

    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cv_container"
        android:layout_marginLeft="21px"
        android:layout_toRightOf="@+id/cv_container"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回答数"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/tv_answer_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp">

        </TextView>

        <TextView
            android:id="@+id/tv_eavesdropping_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:textSize="10sp">

        </TextView>

        <TextView
            android:id="@+id/tv_fans_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:textSize="10sp">

        </TextView>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>