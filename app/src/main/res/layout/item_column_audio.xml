<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/autoLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="39px"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoFrameLayout
            android:id="@+id/fl_audio"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_centerVertical="true"
            android:layout_marginRight="21px">

            <ImageView
                android:id="@+id/img_content_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_rec_recomm_plays"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_media_state"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center"
                android:src="@drawable/icon_rec_recomm_plays" />
        </com.zhy.autolayout.AutoFrameLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/fl_audio"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_free"
                android:layout_width="100px"
                android:layout_height="30px"
                android:layout_marginRight="10px"
                android:layout_marginTop="9px"
                android:background="@drawable/shape_project_pressed"
                android:gravity="center"
                android:text="免费试听"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_title_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9px"
                android:layout_toRightOf="@+id/tv_free"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="#333333"
                android:textSize="15sp" />


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_name"
                android:layout_marginTop="10px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="111"
                    android:textColor="#999999"
                    android:textSize="24px"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v_line"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:background="@color/black"
                    android:visibility="gone"></View>

                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="24px" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:background="@color/black"></View>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="24px" />

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_download"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="62px">

            <ImageView
                android:id="@+id/img_download"
                android:layout_width="26px"
                android:layout_height="26px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_audio_album_download" />
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="33px"
        android:background="#eeeeee"></View>

</com.zhy.autolayout.AutoLinearLayout>