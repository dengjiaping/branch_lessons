<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="20px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_container"
            android:layout_width="180px"
            android:layout_height="240px"
            android:layout_marginLeft="26px">

            <ImageView
                android:id="@+id/img_author"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="31px"
            android:layout_marginRight="26px"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/rl_album_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16px">

                    <TextView
                        android:id="@+id/txt_albumname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:maxEms="8"
                        android:singleLine="true"
                        android:text="111"
                        android:textColor="@color/black_33"
                        android:textSize="32px"
                        android:textStyle="bold" />
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_desc_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_album_name"
                android:layout_marginTop="19px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_editor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="222"
                    android:textColor="#999999"
                    android:textSize="24px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_personal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/ll_desc_editor"
                android:layout_marginTop="25px"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_column_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="2222"
                    android:textColor="@color/black_33"
                    android:textSize="24px" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_read_time"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/shape_e8e8e8_stroke"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#a1a1a1"
                        android:textSize="24px" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#9B9999"
                        android:textSize="25px" />

                    <TextView
                        android:id="@+id/tv_active_price"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/login_state"
                        android:textSize="28px" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>