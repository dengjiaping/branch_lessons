<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="28px"
        android:text="热点资讯"
        android:textColor="#868686"
        android:textSize="15sp"
        android:visibility="gone"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_hot_news_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20px"
        android:layout_marginRight="24px"
        android:layout_marginBottom="20px"
        >

        <TextView
            android:id="@+id/tv_custom"
            android:layout_width="94px"
            android:layout_height="40px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/select_hot_news"
            android:gravity="center"
            android:text="最 新"
            android:textColor="@color/black_33"
            android:textSize="11sp"
            android:visibility="gone"/>


        <RadioGroup
            android:id="@+id/radio_group_news"
            android:layout_width="wrap_content"
            android:layout_height="40px"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/rb_newest"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="最新"
                android:textColor="@color/selector_hot_news"/>

            <View
                android:layout_width="4px"
                android:layout_height="40px"
                android:gravity="center_vertical"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:background="@color/gray"
                />

            <RadioButton
                android:id="@+id/rb_hot"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="最热"
                android:textColor="@color/selector_hot_news"/>

        </RadioGroup>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>