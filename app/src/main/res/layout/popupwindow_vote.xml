<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_vote_success_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="116px"
    android:paddingRight="116px"
    android:paddingBottom="50px"
    android:paddingTop="30px">

    <ImageView
        android:layout_width="112px"
        android:layout_height="112px"
        android:src="@drawable/icon_vote_success" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="投票成功"
        android:textColor="@color/black_33"
        android:textSize="30sp" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您还可投"
            android:textColor="@color/black_33"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_surplus_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/defaultcolortwo"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="票"
            android:textColor="@color/black_33"
            android:textSize="20sp" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="158px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_team_vote"
            android:minHeight="0px"
            android:minWidth="0px"
            android:padding="0px"
            android:text="继续投票"
            android:textColor="@color/white" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/btn_to_lottery"
            android:layout_width="158px"
            android:layout_height="60px"
            android:layout_marginLeft="62px"
            android:background="@drawable/shape_team_vote"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:minHeight="0px"
                android:minWidth="0px"
                android:padding="0px"
                android:text="前往抽奖"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_forward" />
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>