<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.yidiankeyan.science.my.activity.MyAboutWeActivity">

    <include layout="@layout/inc_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_we_moz"
                android:layout_width="158px"
                android:layout_height="158px"
                android:layout_gravity="center"
                android:layout_marginTop="60px"
                android:src="@mipmap/ic_launcher" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:layout_marginTop="60px"
                android:background="#f1f1f1"></View>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:layout_marginTop="30px"
                    android:text="当前版本"
                    android:textColor="@color/black_33"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_we_moz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24px"
                    android:layout_marginTop="30px"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/v_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/tv_we_moz"
                    android:layout_marginTop="30px"
                    android:background="#f2f2f1"></View>

                <ImageView
                    android:id="@+id/img_my_qr_code"
                    android:layout_width="560px"
                    android:layout_height="560px"
                    android:layout_below="@+id/v_line"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="122px"
                    android:layout_marginRight="122px"
                    android:layout_marginTop="36px"
                    android:visibility="gone"
                    android:src="@drawable/icon_qr_code" />

                <TextView
                    android:id="@+id/tv_my_qr_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_my_qr_code"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="36px"
                    android:text="官网：www.poinetech.com"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_my_qr_code"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20px"
                    android:text="地址：北京市海淀区中关村软件园二期互联网创新中心四层405"
                    android:textColor="#999999"
                    android:textSize="12sp" />

            </com.zhy.autolayout.AutoRelativeLayout>


        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>
