<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.yidiankeyan.science.subscribe.activity.CommentDetailsActivity">

    <include layout="@layout/inc_title"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e4e4e4" />

    <cn.finalteam.loadingviewfinal.ListViewFinalLoadMore
        android:id="@+id/lv_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#eeeeee"
        android:dividerHeight="1px"
        android:layout_weight="1"></cn.finalteam.loadingviewfinal.ListViewFinalLoadMore>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_cancel"
        android:background="#EBEBEB"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="11px"
            android:layout_marginLeft="21px"
            android:layout_marginRight="21px"
            android:layout_marginTop="11px"
            android:layout_toLeftOf="@+id/ll_cancel"
            android:textColorHint="#959595"
            android:textColor="#343434"
            android:layout_toRightOf="@+id/img_search_icon"
            android:background="@drawable/shape_edit_audio"
            android:gravity="center_vertical"
            android:hint="写评论..."
            android:imeOptions="actionSend"
            android:paddingBottom="11px"
            android:paddingLeft="21px"
            android:paddingRight="21px"
            android:paddingTop="11px"
            android:singleLine="true"
            android:textSize="15sp" />

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
