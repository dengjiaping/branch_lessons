<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_focus_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21px"
        android:layout_marginLeft="27px"
        android:layout_marginRight="27px"
        android:layout_marginTop="19px"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="80px"
            android:layout_height="80px"

            android:scaleType="centerCrop"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_marginRight="63px"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="9"
                android:text=""
                android:textColor="@color/black_33"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="7px"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="#999999"
                android:textSize="12sp"
                />
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="130px"
            android:layout_height="52px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_download_state_black"
            android:gravity="center"
            android:text="关注+"
            android:textColor="@color/white"
            android:textSize="12sp"/>

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>