<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="vertical"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_order_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:text=""
            android:textColor="#9a9a9a"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_wx_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_wx_pay"
            android:gravity="center"
            android:layout_marginTop="30px"
            android:paddingBottom="20px"
            android:paddingTop="20px"
            android:text="微信支付"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_ali_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:background="@drawable/shape_ali_pay"
            android:gravity="center"
            android:paddingBottom="20px"
            android:paddingTop="20px"
            android:text="支付宝支付"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_balance_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:background="@drawable/shape_balance_pay"
            android:gravity="center"
            android:paddingBottom="20px"
            android:paddingTop="20px"
            android:text="余额支付"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_pay_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginTop="25px"
            android:background="@drawable/shape_pay_cancel"
            android:gravity="center"
            android:paddingBottom="20px"
            android:paddingTop="20px"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </com.zhy.autolayout.AutoLinearLayout>



</com.zhy.autolayout.AutoLinearLayout>