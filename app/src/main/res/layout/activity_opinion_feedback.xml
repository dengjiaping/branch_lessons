<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:id="@+id/ll_opinion_feed"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.yidiankeyan.science.my.activity.OpinionFeedbackActivity">


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/black">


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="27px"
            android:paddingRight="21px">

            <ImageView
                android:id="@+id/title_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_white_return"/>

        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="21px"
            android:paddingRight="26px"
            android:text="反馈记录"
            android:textColor="@color/white"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/maintitle_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="160px"
            android:layout_weight="5"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eeeeee"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/edt_add_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_personality_autograph"
            android:background="@color/white"
            android:enabled="true"
            android:gravity="start"
            android:lines="10"
            android:hint="感谢您的反馈，详细描述更便于问题的快速解决..."
            android:inputType="textMultiLine"
            android:maxEms="200"
            android:maxLines="10"
            android:padding="20px"
            android:textColor="@color/heione"
            android:textColorHint="#7D7A7A"
            android:textSize="12sp"
            android:windowSoftInputMode="stateHidden"></EditText>


        <ImageView
            android:id="@+id/img_upload_camera"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_below="@+id/edt_add_content"
            android:layout_marginLeft="24px"
            android:src="@drawable/icon_upload_feedback"
            />


        <View
            android:id="@+id/v_upload_camera"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/img_upload_camera"
            android:layout_marginLeft="26px"
            android:layout_marginRight="27px"
            android:layout_marginTop="20px"
            android:background="#AAAAAA"
            ></View>

        <TextView
            android:id="@+id/tv_submit_next"
            android:layout_width="576px"
            android:layout_height="86px"
            android:layout_alignLeft="@+id/tv_temp"
            android:layout_below="@+id/v_upload_camera"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="84px"
            android:background="@drawable/shape_login_state"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="36px"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingBottom="71px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="其他反馈方式"
                android:textColor="@color/black_33"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28px"
                android:layout_marginRight="28px"
                android:layout_marginTop="34px"
                android:text="1.欢迎加入墨子学堂用户交流QQ群（群号：194621272）\n随时反馈遇到的问题。群里还有产品、开发等工作人员供你羞辱、差遣喔~\n\n2.客服电话：010-58741978（工作日：09:00-19:00）"
                android:textColor="@color/black_33"
                android:textSize="13sp"
                />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
