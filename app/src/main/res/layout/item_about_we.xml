<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="21px">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_container"
        cardBackgroundColor="#ffffff"
        cardPreventCornerOverlap="true"
        cardUseCompatPadding="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_marginTop="5dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="3dp"
        app:contentPadding="2dp">

        <ImageView
            android:id="@+id/img_about"
            android:layout_width="60dp"
            android:scaleType="centerCrop"
            android:layout_height="60dp"
            />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/tv_about_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cv_container"
        android:layout_marginLeft="21px"
        android:layout_toRightOf="@+id/cv_container"
        android:text="我是新手"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_about_name"
        android:layout_marginLeft="21px"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@+id/cv_container"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_about_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="14"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="花5分钟让你通览墨子全貌"
            android:textSize="12sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            android:padding="10px"
            />

    </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:id="@+id/txt_about_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-10-31"
            android:textSize="10sp"
            android:layout_alignBottom="@+id/cv_container"
            android:layout_alignParentRight="true"
            />



</com.zhy.autolayout.AutoRelativeLayout>