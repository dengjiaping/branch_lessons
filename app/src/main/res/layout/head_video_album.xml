<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_jump_data"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_portrait"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_marginLeft="21px" />

                <TextView
                    android:id="@+id/tv_author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@+id/img_portrait"
                    android:text="主编名字" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:src="@drawable/icon_v" />

                <View
                    android:id="@+id/v_test"
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_weight="1">

                </View>

                <ImageView
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_marginRight="21px"
                    android:scaleType="centerInside"
                    android:src="@drawable/more"
                    android:visibility="gone" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="match_parent"
            android:layout_height="460px"
            android:background="@color/black"
            android:orientation="horizontal">

            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/video_player"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>

            <TextView
                android:id="@+id/textView1_curr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:text="00:00"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView1_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom|right"
                android:text="00:00"
                android:textColor="@color/white"
                android:visibility="gone" />
        </com.zhy.autolayout.AutoFrameLayout>


        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_audio_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21px"
                android:src="@drawable/audio_play_list" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/media_last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="10px"
                    android:src="@drawable/shangjie" />

            </com.zhy.autolayout.AutoLinearLayout>

            <ImageButton
                android:id="@+id/media_plays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/bofangs" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/media_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="10px"
                    android:src="@drawable/xiajie" />

            </com.zhy.autolayout.AutoLinearLayout>

            <ImageButton
                android:id="@+id/btn_full_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="21px"
                android:background="@null"
                android:src="@drawable/icon_fullscreen" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20px">

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_marginTop="20px"
                android:descendantFocusability="blocksDescendants">

                <android.support.v7.widget.CardView
                    cardBackgroundColor="#ffffff"
                    cardPreventCornerOverlap="true"
                    cardUseCompatPadding="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="3dp"
                    app:contentPaddingBottom="2dp"
                    app:contentPaddingLeft="2dp"
                    app:contentPaddingRight="2dp"
                    app:contentPaddingTop="2dp">

                    <ImageView
                        android:id="@+id/img_album_avatar"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                </android.support.v7.widget.CardView>

            </com.zhy.autolayout.AutoRelativeLayout>


            <TextView
                android:id="@+id/tv_album_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_audio_sub"
                android:layout_alignTop="@+id/rl_msg"
                android:layout_toRightOf="@+id/rl_msg"
                android:ellipsize="end"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:maxLines="2"
                android:textColor="@color/huihei"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tv_recent_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/rl_msg"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxEms="11"
                android:singleLine="true"
                android:textColor="@color/menu"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_album_author_name"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/rl_msg"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_alignBottom="@+id/rl_msg"
                android:textColor="@color/menu"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_content_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_album_author_name"
                android:layout_alignBottom="@+id/tv_album_author_name"
                android:layout_marginLeft="20px"
                android:textColor="@color/menu"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_read_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_content_num"
                android:layout_alignBottom="@+id/tv_content_num"
                android:layout_marginLeft="20px"
                android:layout_marginRight="24px"
                android:textColor="@color/menu"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_audio_sub"
                android:layout_width="124px"
                android:layout_height="40px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24px"
                android:layout_marginTop="20px"
                android:background="@drawable/shape_sub"
                android:gravity="center"
                android:text="+订阅"
                android:textColor="@color/defaultcolortwo"
                android:textSize="13sp" />
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/gainsboros" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20px">


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4px"
            android:layout_marginRight="4px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="相关推荐"
                android:textColor="@color/huihei"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/more"
                android:visibility="gone" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.yidiankeyan.science.view.NoScrollGridView
            android:id="@+id/gv_recommend_album"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="21px"
            android:numColumns="3"
            android:stretchMode="columnWidth" />
    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/gainsboros" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_album_gratuity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:visibility="gone"
            android:src="@drawable/icon_album_gratuity" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="24px"
            android:layout_marginTop="20px"
            android:text="评论"
            android:textColor="@color/huihei"
            android:textSize="18sp" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_today_click_normal" />

                <TextView
                    android:id="@+id/tv_click_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:ellipsize="end"
                    android:maxLength="7"
                    android:singleLine="true"
                    android:text="458451" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selecotr_comment_bg" />

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:ellipsize="end"
                    android:maxLength="7"
                    android:singleLine="true"
                    android:text="52643" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_reward_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="¥865245" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/audio_share_ash" />

                <TextView
                    android:id="@+id/tv_share_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:ellipsize="end"
                    android:maxLength="7"
                    android:singleLine="true"
                    android:text="15451" />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eeeeee"

        />

</com.zhy.autolayout.AutoLinearLayout>