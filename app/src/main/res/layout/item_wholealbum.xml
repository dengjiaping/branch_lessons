<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="20px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21px"
            android:descendantFocusability="blocksDescendants">

            <android.support.v7.widget.CardView
                cardBackgroundColor="#ffffff"
                cardPreventCornerOverlap="true"
                cardUseCompatPadding="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="0dp"
                app:cardElevation="3dp"
                app:contentPaddingBottom="2dp"
                app:contentPaddingLeft="2dp"
                app:contentPaddingRight="2dp"
                app:contentPaddingTop="2dp">

                <ImageView
                    android:id="@+id/gridview_item_button"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    />

            </android.support.v7.widget.CardView>

        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/whole_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="专辑名称"
                        android:ellipsize="end"
                        android:maxEms="14"
                        android:singleLine="true"
                        android:textColor="@color/huihei"
                        android:textSize="15sp"/>


                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/whoid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/txt_whocontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxEms="11"
                    android:singleLine="true"
                    android:text="最新一期内容标题"
                    android:textColor="@color/qianhui"
                    android:textSize="10sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="21px"
                    android:background="@drawable/more"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                    <TextView
                        android:id="@+id/txt_whoname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:ellipsize="end"
                        android:maxEms="4"
                        android:singleLine="true"
                        android:layout_marginTop="20px"
                        android:layout_marginLeft="20px"
                        android:textColor="@color/qianhui"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/txt_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="20px"
                        android:layout_toRightOf="@+id/txt_whoname"
                        android:ellipsize="end"
                        android:maxEms="5"
                        android:singleLine="true"
                        android:textColor="@color/qianhui"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/txt_whotou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="20px"
                        android:layout_marginRight="20px"
                        android:layout_toRightOf="@+id/txt_number"
                        android:ellipsize="end"
                        android:maxEms="5"
                        android:singleLine="true"
                        android:textColor="@color/qianhui"
                        android:textSize="10sp"/>

                <TextView
                    android:id="@+id/txt_whoupdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="20px"
                    android:text="16小时前"
                    android:textColor="@color/qianhui"
                    android:textSize="10sp"/>

            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>