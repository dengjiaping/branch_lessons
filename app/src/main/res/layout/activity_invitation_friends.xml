<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    android:id="@+id/activity_invitation_friends"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yidiankeyan.science.my.activity.InvitationFriendsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_invitation_bg"
                android:layout_width="match_parent"
                android:layout_height="876px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_navy"
                />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="70px">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/ll_return"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:paddingLeft="24px"
                    android:paddingRight="21px">

                    <ImageView
                        android:id="@+id/title_return"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_audio_return"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="邀请好友"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:visibility="gone"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_moz_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_invitation_bg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35px"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的墨子号："
                    android:textColor="#010101"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/tv_science_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 8888888"
                    android:textColor="@color/account_balance1"
                    android:textSize="24sp"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/tv_text_invitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_moz_number"
                android:layout_centerHorizontal="true"
                android:text="邀请好友注册墨子学堂填写墨子号即可获得丰厚奖励"
                android:textColor="#010101"
                android:textSize="14sp"
                />

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_share_friends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_text_invitation"
                android:layout_marginTop="40px"
                android:gravity="center"
                >

                <View
                    android:layout_width="150px"
                    android:layout_height="1dp"
                    android:background="#999999"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 分享我的墨子号 "
                    android:textColor="#999999"
                    android:textSize="14sp"
                    />

                <View
                    android:layout_width="150px"
                    android:layout_height="1dp"
                    android:background="#999999"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_share_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_share_friends"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:orientation="horizontal"
                android:paddingBottom="20px"
                android:paddingTop="30px">

                <ImageView
                    android:id="@+id/img_share_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/img_weixin"/>

                <ImageView
                    android:id="@+id/img_share_friend_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="104px"
                    android:scaleType="center"
                    android:src="@drawable/img_weixin_circle"/>


                <ImageView
                    android:id="@+id/img_share_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="104px"
                    android:scaleType="center"
                    android:src="@drawable/img_qq"
                    />

                <ImageView
                    android:id="@+id/img_share_sina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="104px"
                    android:scaleType="center"
                    android:src="@drawable/img_xinlang"
                    android:visibility="gone"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

    </ScrollView>


</com.zhy.autolayout.AutoRelativeLayout>
