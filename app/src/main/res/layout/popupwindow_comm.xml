<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4F5F6"
    android:orientation="vertical"
    android:paddingBottom="15px"
    android:paddingLeft="21px"
    android:paddingRight="21px"
    android:paddingTop="15px">

    <EditText
        android:id="@+id/et_popupwindow_comm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@+id/btn_send_comm"
        android:background="@drawable/shape_et_comment_bg"
        android:cursorVisible="true"
        android:focusable="true"
        android:gravity="top"
        android:hint="优质评论将会被优先展示"
        android:inputType="none"
        android:lines="4"
        android:maxLines="4"
        android:minLines="4"
        android:paddingBottom="28px"
        android:paddingLeft="21px"
        android:paddingRight="21px"
        android:paddingTop="28px"
        android:textSize="13sp"/>

    <Button
        android:id="@+id/btn_submit_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15px"
        android:background="@drawable/selector_comment_submit_bg"
        android:enabled="false"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingBottom="15px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingTop="15px"
        android:textColor="@color/red"
        android:text="发表"/>

</com.zhy.autolayout.AutoLinearLayout>