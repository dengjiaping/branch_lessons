<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context=".app.activity.RegisterSuccessActivity">

    <include layout="@layout/inc_title"></include>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜您成功加入了墨子圈\n即将为您跳转到我的界面"
            android:singleLine="false"
            android:layout_marginBottom="20px"
            />

        <TextView
            android:id="@+id/tv_time_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            />

        <TextView
            android:id="@+id/tv_jumps"
            android:layout_width="630px"
            android:layout_height="72px"
            android:layout_marginTop="30px"
            android:background="@drawable/select_default_ellipse"
            android:gravity="center"
            android:text="直接跳转"
            android:textColor="@color/defaultcolor"
            android:textSize="30px"/>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
