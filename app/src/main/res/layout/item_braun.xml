<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        card_view:cardCornerRadius="5dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_brauntitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21px"
                android:text="量子通信全靠他一人"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/al_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21px"
                android:layout_marginTop="10px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_braunplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1568位小伙伴在拼"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/img_braun"
                android:layout_width="match_parent"
                android:layout_height="501px"
                android:layout_marginLeft="21px"
                android:layout_marginRight="21px"
                android:layout_marginTop="10px"
                android:scaleType="fitXY"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:gravity="bottom"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1">

                </View>


                <ImageView
                    android:id="@+id/img_braun_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="21px"
                    android:background="@drawable/audio_share_white"/>

            </com.zhy.autolayout.AutoLinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>