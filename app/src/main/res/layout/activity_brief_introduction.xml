<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.yidiankeyan.science.my.activity.BriefIntroductionActivity">


    <include layout="@layout/inc_title"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eeeeee"
        ></View>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/edt_personality_autograph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_personality_autograph"
            android:background="@color/white"
            android:enabled="true"
            android:gravity="start"
            android:hint="请输入个人简介..."
            android:inputType="textMultiLine"
            android:maxEms="200"
            android:maxLines="10"
            android:minHeight="410px"
            android:paddingTop="30px"
            android:paddingLeft="24px"
            android:scrollbars="vertical"
            android:textColor="@color/heione"
            android:textColorHint="#999999"
            android:textSize="12sp"
            android:windowSoftInputMode="stateHidden"></EditText>

        <TextView
            android:id="@+id/tv_hasnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edt_personality_autograph"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30px"
            android:layout_marginRight="24px"
            android:textSize="12sp"
            android:textColor="#999999"
            android:text="0/200"/>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
