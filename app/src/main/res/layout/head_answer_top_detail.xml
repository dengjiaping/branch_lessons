<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:background="@color/white"
                                     android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CCCCCC"></View>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="21px"
        android:paddingTop="21px">

        <ImageView
            android:id="@+id/img_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_create_voice"
            android:src="@drawable/icon_kedas_message"
            android:visibility="gone"/>


        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30px"
            android:layout_marginTop="9px"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_avatar"
            android:layout_centerHorizontal="true"
            android:text="姓名"
            android:textColor="@color/black_33"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txt_follow"
            android:layout_width="138px"
            android:layout_height="47px"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/img_avatar"
            android:background="@drawable/shape_sub"
            android:gravity="center"
            android:text="关注答人"
            android:textColor="@color/main_orange"

            android:textSize="14sp"/>


        <TextView
            android:id="@+id/tv_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:layout_marginTop="30px"
            android:maxLength="15"
            android:text="职业信息"
            android:textColor="#999999"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_job"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:layout_marginTop="30px"
            android:ellipsize="end"
            android:gravity="top|center"
            android:lineSpacingExtra="2px"
            android:lineSpacingMultiplier="1.1"
            android:lines="3"
            android:textColor="#999999"
            android:textSize="13sp"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_full_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sign"
            android:layout_centerHorizontal="true"
            android:padding="20px"
            >

            <TextView
                android:id="@+id/tv_full_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="全文"
                android:textColor="@color/red"
                android:textSize="12sp"
                />
        </com.zhy.autolayout.AutoRelativeLayout>

        <ImageView
            android:id="@+id/img_authenticated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_name"
            android:src="@drawable/icon_v"
            android:visibility="gone"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_audio_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_avatar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/inc_message"
        android:visibility="gone">

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_audio_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20px"
        android:layout_marginTop="15px"
        android:layout_toRightOf="@+id/ll_audio_commit"
        android:text=""
        android:textSize="20px"
        android:visibility="gone"/>


