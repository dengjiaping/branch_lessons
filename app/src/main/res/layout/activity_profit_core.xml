<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.yidiankeyan.science.my.activity.ProfitCoreActivity">


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="508px"
        android:background="#ff5252"
        android:orientation="vertical">


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            >

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_return"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="21px"
                android:paddingRight="21px">

                <ImageView
                    android:id="@+id/title_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_white_return"/>

            </com.zhy.autolayout.AutoLinearLayout>


            <TextView
                android:id="@+id/maintitle_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="160px"
                android:layout_marginTop="20px"
                android:layout_weight="5"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="我的奖学金"
                android:textColor="@color/white"
                android:textSize="18dp"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="20px"
                >

                <ImageView
                    android:id="@+id/img_more_function"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_white_more"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/tv_current_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="72px"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_current_money_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_current_money"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="29px"
                android:text="当前金额（元）"
                android:textColor="@color/white"
                android:textSize="16dp"
                />


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_current_money_yuan"
                android:layout_marginLeft="42px"
                android:layout_marginTop="30px"
                android:gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_today_profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="今日（元）"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    />

            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_current_money_yuan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30px"
                android:gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_month_profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="本月（元）"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    />

            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_current_money_yuan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30px"
                android:gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_sum_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxEms="8"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="总金额（元）"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    />


            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <cn.finalteam.loadingviewfinal.PtrClassicFrameLayout
        android:id="@+id/ptr_recommend_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

        <cn.finalteam.loadingviewfinal.ListViewFinalLoadMore
            android:id="@+id/lv_profit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20px"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:dividerHeight="1px"
            app:loadMoreMode="scroll"/>
    </cn.finalteam.loadingviewfinal.PtrClassicFrameLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_no_school_money"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_no_money"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="当前没有奖学金记录"
                android:textColor="#ABA9AB"
                android:textSize="15dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="26px"
                android:text="要不去买个专栏分享试一下？"
                android:textColor="#ABA9AB"
                android:textSize="15dp"
                />


            <TextView
                android:id="@+id/tv_go_home_look"
                android:layout_width="200px"
                android:layout_height="80px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="72px"
                android:background="@drawable/shape_login_state"
                android:gravity="center"
                android:text="去看看"
                android:textColor="@color/white"
                />

        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:id="@+id/tv_detail_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37px"
            android:layout_marginRight="40px"
            android:text="@string/profit_message"
            android:textColor="#C1BCC1"
            android:textSize="10dp"
            />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            >

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40px"
                android:text="详情 >>"
                android:textColor="@color/login_state"
                android:textSize="15dp"
                />
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
