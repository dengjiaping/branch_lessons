<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_title_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28px"
            android:layout_marginTop="22px"
            >

            <TextView
                android:id="@+id/tv_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_free_of_charge"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/black_33"
                android:textSize="15sp"
                android:textStyle="bold"
                />


        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_article_img"
            android:layout_width="match_parent"
            android:layout_height="346px"
            android:layout_below="@+id/rl_title_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="27px"
            android:layout_marginTop="21px"
            >

            <ImageView
                android:id="@+id/img_content_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_banner_load"
                />

            <ImageView
                android:id="@+id/tv_free_of_charge"
                android:layout_width="112px"
                android:layout_height="46px"
                android:layout_marginTop="-8px"
                android:src="@drawable/icon_column_probation"
                />

        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_article_img"
            android:layout_marginLeft="27px"
            android:layout_marginRight="27px"
            android:layout_marginTop="22px"
            android:text=""
            android:textColor="#808080"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tv_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_desc"
            android:layout_marginLeft="27px"
            android:layout_marginTop="20px"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/menu"
            android:textSize="12sp"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16px"
        android:layout_marginTop="22px"
        android:background="#eeeeee"
        ></View>

</com.zhy.autolayout.AutoLinearLayout>